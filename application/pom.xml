    <groupId>it.smartcommunitylabdhub</groupId>
    <artifactId>core</artifactId>
    <name>dhcore</name>
    <version>${revision}</version>
    <description>Digital Hub Core</description>
    <properties>
        <revision>0.11.0-SNAPSHOT</revision>
        <java.version>21</java.version>
